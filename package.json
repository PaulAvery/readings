{
  "name": "readings",
  "version": "1.0.0",
  "bin": "lib/server.js",
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/PaulAvery/readings.git"
  },
  "dependencies": {
    "article-extractor": "^1.0.2",
    "browserify": "^10.2.4",
    "co-body": "^2.0.0",
    "color-hash": "^1.0.3",
    "github-markdown-css": "^2.0.9",
    "is-url": "^1.2.1",
    "isomorphic-mithril": "^1.1.0",
    "koa": "^0.21.0",
    "koa-compose": "^2.3.0",
    "koa-compress": "^1.0.8",
    "koa-conditional-get": "^1.0.3",
    "koa-error": "^1.1.3",
    "koa-etag": "^2.0.0",
    "koa-json": "^1.1.1",
    "koa-route": "paulavery/route",
    "koa-static-cache": "^3.1.2",
    "marky-markdown": "^5.3.0",
    "material-design-lite": "^1.0.0-3",
    "mithril": "lhorie/mithril.js#next",
    "mithril-mdl": "^1.0.0",
    "sanitize-filename": "^1.3.0",
    "source-map-support": "^0.3.2"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "eslint": "^0.24.0",
    "eslint-plugin-react": "^2.7.0",
    "forever": "^0.14.2",
    "node-sass": "^3.2.0",
    "version-bump": "^0.1.0"
  },
  "scripts": {
    "test": "make lint",
    "prepublish": "make && make lint"
  },
  "author": "Florian Albertz",
  "license": "BSD-3-Clause",
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "react"
    ],
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "rules": {
      "curly": [
        2,
        "multi-line"
      ],
      "quotes": [
        2,
        "single"
      ],
      "react/jsx-uses-react": [
        2,
        {
          "pragma": "m"
        }
      ]
    }
  },
  "browser": {
    "./lib/isomorph.js": "./lib/isomorph/browser.js"
  }
}
